@model IEnumerable<CakeMaker.Models.Product>

@{
    ViewBag.Title = "AllProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--  start-wrap -->
<div class="wrap">
    <!--image-slider-->
    <div id="slideshow">
        <ul>
            <li>
                <img src="~/Content/images/slide2.jpg" alt="" title="Lorem ipsum dolor sit amet. " />
            </li>

            <li>
                <img src="~/Content/images/slide1.jpg" alt="" title="labore et dolore magna aliqua. " />
            </li>

            <li>
                <img src="~/Content/images/slide3.jpg" alt="" title="labore et dolore magna aliqua. " />
            </li>

            <li>
                <img src="~/Content/images/slide2.jpg" alt="" title="Lorem ipsum dolor sit amet. " />
            </li>

            <li>
                <img src="~/Content/images/slide1.jpg" alt="" title="Lorem ipsum dolor sit ametsed do eiusmod tempor . " />
            </li>
        </ul>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
    <script src="~/Content/js/craftyslide.min.js"></script>
    <script src="~/Content/js/jquery-1.6.2.min.js"></script>

    <script>
        $("#slideshow").craftyslide();
    </script>
    <div class="clear"> </div>
    <!--End-image-slider-->
    <!--Start-PRODUCTS-->
    <div class="products">
        <h3>Our products</h3>
    </div>
    <div class="product-grids">

        @foreach (var item in Model)
        {
            <div class="product-grid all-product" style="position:relative;">
                <img src="@Html.DisplayFor(modelItem => item.Image)">
                <h4>Item code: @Html.DisplayFor(modelItem => item.Id)</h4>
                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                <p>@Html.DisplayFor(modelItem => item.SimpleDes)</p>
                <p style="position:absolute;bottom:0">
                    Quantity: @Html.DisplayFor(modelItem => item.Quantity)
                    <br />
                    <button class="btn btn-info order-btn">@Html.ActionLink("Order", "Order", new { id = item.Id }, new { target = "_blank" })</button>
                </p>
                <p style="position:absolute;bottom:0;right:0;">
                    Price: <span class="text-danger"> @Html.DisplayFor(modelItem => item.Price)</span> VND
                </p>

            </div>
        }
        <div class="clear"> </div>
    </div>
</div>
<!--End-PRODUCTS-->
<div class="clear"> </div>
<div class="footer">
    <div class="copy-right">
        <p>© 2018 CakeMaker. All rights Reserved</p>
    </div>
</div>
